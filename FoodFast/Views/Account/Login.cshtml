@using FastFood.UI.ViewModels
@model LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Đăng nhập - FastFood";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            background-color: #fff;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 420px;
        }
        .form-control {
            border-radius: .5rem;
        }
        .btn-primary {
            background: #667eea;
            border: none;
        }
        .btn-primary:hover {
            background: #5a67d8;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <h3 class="text-center mb-4 fw-bold text-primary">Đăng nhập</h3>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label  class="form-label">Tài khoản</label>
                <input asp-for="Username" type="text" class="form-control"  name="Username" placeholder="Nhập tài khoản của bạn" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <input asp-for="RememberMe" type="checkbox" id="RememberMe" name="RememberMe">
                    
                    <label for="RememberMe" class="ms-1 small text-muted">Ghi nhớ tôi</label>

                </div>
                <a href="#" class="small text-primary text-decoration-none">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

            <p class="text-center mt-3 small text-muted">
                Chưa có tài khoản?
                <a asp-action="Signup" class="text-decoration-none text-primary fw-semibold">Đăng ký ngay</a>
            </p>
        </form>
    </div>

</body>
</html>
