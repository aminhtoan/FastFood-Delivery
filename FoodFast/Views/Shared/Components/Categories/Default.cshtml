@model IEnumerable<FoodFast.DAL.Models.CategoryModel>

@foreach (var item in Model)
{
    <a class="list-group-item list-group-item-action category-btn"
       asp-controller="Category"
       asp-action="Index"
       asp-route-Slug="@item.Slug">
        <i class="fas fa-glass-water me-2"></i>@item.Name
    </a>
}