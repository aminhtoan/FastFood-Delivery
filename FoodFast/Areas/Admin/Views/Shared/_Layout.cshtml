<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["title"] - Admin Dashboard-FastFood Delivery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        }

            .sidebar .nav-link {
                color: rgba(255,255,255,0.8);
                padding: 12px 20px;
                margin: 5px 0;
                border-radius: 8px;
                transition: all 0.3s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255,255,255,0.1);
                    color: white;
                }

        .stats-card {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
        }

            .stats-card.success {
                background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            }

            .stats-card.warning {
                background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
            }

            .stats-card.info {
                background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            }

        .restaurant-card {
            border-left: 4px solid #e74c3c;
            transition: transform 0.2s;
        }

            .restaurant-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <h4 class="text-white mb-4">
                        <i class="fas fa-cogs me-2"></i>
                        Admin Panel
                    </h4>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="admin-dashboard.html">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                        <a class="nav-link" href="admin-restaurants.html">
                            <i class="fas fa-store me-2"></i>Nhà hàng
                        </a>
                        <a class="nav-link" href="admin-categories.html">
                            <i class="fas fa-tags me-2"></i>Danh mục
                        </a>
                        <a class="nav-link" href="admin-customers.html">
                            <i class="fas fa-users me-2"></i>Khách hàng
                        </a>
                        <a class="nav-link" href="admin-orders.html">
                            <i class="fas fa-shopping-bag me-2"></i>Đơn hàng
                        </a>
                        <a class="nav-link" href="admin-reports.html">
                            <i class="fas fa-chart-bar me-2"></i>Báo cáo
                        </a>
                        <a class="nav-link" href="admin-settings.html">
                            <i class="fas fa-cog me-2"></i>Cài đặt
                        </a>
                        <hr class="text-white-50">
                        <a class="nav-link" href="index.html">
                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                        </a>
                    </nav>
                </div>
            </div>

           @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
